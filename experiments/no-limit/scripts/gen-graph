        done
    done | awk '{print $0"\t"$1"-"$3}' | tee stats-tmp.csv

    _drawGraphGroupByField "stats-tmp.csv" '2' '1024*1024' '10' '1' "Size (MB)" "99th percentile (cycles)" "graphs/simple-size-cyc.pdf" true false '12'
