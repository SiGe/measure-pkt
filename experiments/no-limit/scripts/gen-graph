_experimentKeySizePerformance() {
    for dist in 0.75 1.1 1.25 1.5 1.75; do
        for size in 1048576; do
            _statsForExp "Linear" $dist $size 3
            _statsForExp "Linear" $dist $size 12
        done
    done | awk '{print $0"\t"$1"-"$4}' | tee stats-tmp.csv
    for dist in 0.75 1.1 1.25 1.5 1.75; do
        for size in 524288; do
            _statsForExp "Cuckoo" $dist $size 3
            _statsForExp "Cuckoo" $dist $size 12

            _statsForExp "CuckooBucket" $dist $size 3
            _statsForExp "CuckooBucket" $dist $size 12
        done
    done | awk '{print $0"\t"$1"-"$4}' | tee -a stats-tmp.csv
    _drawGraphGroupByField "stats-tmp.csv" '3' '1' '10' '1' "Traffic dist (Zipf param)" "99th percentile (cycles)" "graphs/linear-cuckoo-dist-mov.pdf" false false '12'
}

_experimentKeySizePointerPerformance() {
